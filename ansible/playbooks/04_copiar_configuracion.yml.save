- hosts: all
  become: yes
  become_user: ubuntu
  become_method: sudo
  gather_facts: True

  tasks:
    - name: Copiar el archivo de configuraci贸n Core-Site.XML
      ansible.builtin.template:
        src: playbooks/templates/core-site.j2
        dest: core-site.xml
        owner: ubuntu
        group: ubuntu
        mode: '0644'
    - name: Copiar el archivo de configuraci贸n HDFS-Site.XML
      ansible.builtin.copy:
        src:  playbooks/files/hdfs-site.xml
        dest: /usr/local/hadoop/etc/hadoop/hdfs-site.xml
        owner: ubuntu
        group: ubuntu
        mode: '0644'
    - name: Copiar el archivo de configuraci贸n MapRed-Site.XML
      ansible.builtin.copy:
        src:  playbooks/files/mapred-site.xml
        dest: /usr/local/hadoop/etc/hadoop/mapred-site.xml
        owner: ubuntu
        group: ubuntu
        mode: '0644'
    - name: Copiar el archivo de configuraci贸n Yarn-Site.XML
      ansible.builtin.copy:
        src:  playbooks/templates/yarn-site.j2
        dest: /usr/local/hadoop/etc/hadoop/yarn-site.xml
        owner: ubuntu
        group: ubuntu
        mode: '0644'
    - name: Copiar el fichero con la clave privada
      ansible.builtin.copy:
        src:  playbooks/files/id_rsa
        dest: /home/ubuntu/.ssh/id_rsa
        owner: ubuntu
        group: ubuntu
        mode: '0600'
